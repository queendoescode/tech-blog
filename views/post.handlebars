
<section>
  <div class="post-header">
    <div>
      Posted by {{post.User.username}} on {{format_date post.post_date}}
    </div>
    <h2>{{post.title}}</h2>
  </div>

  <p>
    {{post.body}}
  </p>
</section>

{{#each post.Comments as |comment|}}

  <section>
    <p>
      {{comment.body}} 
      <em>â€” {{comment.User.username}}, {{format_date comment_date}}</em>
    </p>
  </section>

{{/each}}

{{#if loggedIn}}
  <form id="comment-form">
    <input type="hidden" id="post-id" value="{{post.id}}">

    <label for="comment">Comment:</label>
    <textarea id="comment"></textarea>
    <button type="submit">Submit</button>
  </form>
{{/if}}